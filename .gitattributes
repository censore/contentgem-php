# Auto detect text files and perform LF normalization
* text=auto

# PHP files
*.php text eol=lf

# Composer files
composer.json text eol=lf
composer.lock text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.xml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary

# Exclude files from export
/.gitattributes export-ignore
/.gitignore export-ignore
/.github export-ignore
/tests export-ignore
/phpunit.xml export-ignore
/.phpunit.result.cache export-ignore
/.php-cs-fixer.cache export-ignore
/.phpstan.result.cache export-ignore 