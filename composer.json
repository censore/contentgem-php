{
    "name": "contentgem/php-sdk",
    "description": "Official PHP SDK for ContentGem API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "ContentGem Team",
            "email": "support@contentgem.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "ContentGem\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ContentGem\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs src/ tests/",
        "cs-fix": "phpcbf src/ tests/",
        "stan": "phpstan analyse src/",
        "fix": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "keywords": [
        "contentgem",
        "api",
        "sdk",
        "php",
        "content-generation",
        "ai"
    ],
    "homepage": "https://docs.contentgem.com/api",
    "support": {
        "issues": "https://github.com/contentgem/contentgem-php/issues",
        "source": "https://github.com/contentgem/contentgem-php"
    }
} 